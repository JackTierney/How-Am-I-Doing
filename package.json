{
  "name": "how-am-i-doing",
  "version": "1.0.0",
  "description": "Anna Freud Project for childrens mental health",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/eslint .",
    "lint-fix": "node_modules/.bin/eslint . --fix",
    "watch:js": "nodemon -e js,css,html server/index.js",
    "watch:sass": "sass --watch sass/main.scss:public/css/main.css",
    "watch": "npm run watch:sass & npm run watch:js",
    "build": "sass -t compressed sass/main.scss public/css/main.css",
    "prestart": "npm run build",
    "start": "node server/index.js",
    "test": "node_modules/.bin/tape tests/runner.js",
    "cover": "node_modules/.bin/istanbul cover node_modules/.bin/tape tests/runner.js",
    "heroku": "bash build.sh && node server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackTierney/How-Am-I-Doing.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JackTierney/How-Am-I-Doing/issues"
  },
  "homepage": "https://github.com/JackTierney/How-Am-I-Doing#readme",
  "dependencies": {
    "bcrypt": "^0.8.6",
    "boom": "^3.1.3",
    "caminte": "^0.2.12",
    "env2": "^2.1.0",
    "handlebars": "^4.0.5",
    "hapi": "^13.4.0",
    "hapi-auth-jwt2": "^6.0.0",
    "inert": "^4.0.0",
    "joi": "^8.1.0",
    "jsonwebtoken": "^7.0.0",
    "redis": "^2.6.0-2",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^2.10.2",
    "istanbul": "^0.4.3",
    "wrapping-tape": "0.0.3"
  }
}
